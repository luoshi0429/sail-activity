<script>
import wepy from 'wepy'
import PopBox from '@/components/pop-box'
import Api from '@/helper/api'
import { connect } from 'wepy-redux'

@connect({
  user (state) {
    return state.user
  }
})
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '小象运动报名',
    navigationStyle: 'custom'
  }
  data = {
    previewUrl: '',
    showPreview: false,
    detail: {}
  }

  mixins = []

  components = { PopBox }

  methods = {
    handlePreviewQrcode () {
      console.log('-----')
      wepy.previewImage({
        content: this.detail.commuityIcon,
        urls: [this.detail.commuityIcon]
      })
    },
    handleCheckGameDetail () {
      // this.$redirect('/pages/home/index')
      wepy.reLaunch({
        url: '/pages/home/index'
      })
    },
    handleShareToTimeline () {
      wepy.getSetting().then((res) => {
        if (!res.authSetting['scope.writePhotosAlbum'] && typeof res.authSetting['scope.writePhotosAlbum'] === 'boolean') {
          this.$broadcast('confirm', {
            title: '未开启权限',
            subTitle: '请先前往"设置"开启相册权限',
            confirm: {
              title: '去设置',
              onTap: (close) => {
                close()
                wepy.openSetting()
              }
                // type: 'setting'
            },
            cancel: {}
          })
        } else {
          wepy.showLoading({
            title: '正在生成门票'
          })
          Api.fetch('api/info/share').then(r => {
            console.log(r)
            wepy.downloadFile({
                // url: r
              url: 'https://ovj1az9fj.bkt.clouddn.com/1531917065138.png?-249/text/5YWo5rCR5YGl6LqrIOebiuerpeWBpei6qw==/font/5b6u6L2v6ZuF6buR/fill/IzI2OEU5Qg==/gravity/West/dx/260/dy/-249/text/NS4y5YWs6YeM5YWs55uK6LeR/font/5b6u6L2v6ZuF6buR/fill/IzI2OEU5Qg==/gravity/West/dx/400/dy/-249/text/MjAxOC8wNy8xMw==/font/5b6u6L2v6ZuF6buR/fill/IzI2OEU5Qg==/gravity/West/dx/523/dy/-249'
            }).then(res => {
              wepy.hideLoading()
              const tmpPath = res.tempFilePath
              wepy.saveImageToPhotosAlbum({
                filePath: tmpPath
              }).then(() => {
                this.$broadcast('toast', {
                  title: '门票已保存至系统相册',
                  duration: 1500,
                  onClose: () => {
                    wepy.previewImage({
                      current: tmpPath,
                      urls: [tmpPath]
                    })
                  }
                })
              }).catch((err) => {
                console.log(err, 'err')
                this.$broadcast('toast', {
                  title: '保存失败',
                  duration: 2000
                })
              })
            }).catch(() => {
              wepy.hideLoading()
            })
          }).catch((err) => {
            wepy.hideLoading()
            this.$broadcast('toast', { title: err.msg })
          })
        }
      })
    }
  }

  onRoute () {}

  onLoad (options) {
    Api.post('api/info/about/user/join/info', { userJoinId: options.userJoinId })
      .then(r => {
        console.log(r, 'gym detail')
        this.detail = r
        this.$apply()
      })
      .catch(err => {
        console.log(err, 'get gym detail err')
      })
  }

  onShareAppMessage () {
    return {
      title: '送你一张报名门票，和我一起参加全民健身 益童奔跑',
      imageUrl: '/assets/share_ticket.png',
      // imageUrl: '/assets/icon-address.png',
      path: '/pages/home/index'
    }
  }
}
</script>
